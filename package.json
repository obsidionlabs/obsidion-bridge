  "dependencies": {
    "@noble/ciphers": "^1.2.1",
    "@noble/hashes": "^1.8.0",
    "@noble/secp256k1": "^2.2.3",
    "@types/pako": "^2.0.3",
    "debug": "^4.3.4",
    "pako": "^2.1.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.2",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "packageManager": "bun@1.2.13"
